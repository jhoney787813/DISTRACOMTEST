@model MVCSERIESTEST.Models.ViewModels.SeriesAddViewModel
@{
    ViewBag.Title = "Nueva Serie";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm("New","Series",FormMethod.Post)) {
<div class="row">
    <div class="col-md-12">
        <div>
            @Html.LabelFor(d => d.UserName)
